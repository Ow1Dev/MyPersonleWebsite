@model MyPersonelWebsite.Models.Projects.ProjectIndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Projects</h2>
@if (Model.ProjectList.Any())
{
    <table class="table table-hover" id="ProjectIndexTable">
        <tbody>
            @foreach (var project in Model.ProjectList)
            {
                <tr>
                    <td>
                        <a asp-controller="Project" asp-action="View" asp-route-Title="@project.Name">@project.Name</a>
                    </td>
                    <td>
                        @project.Description
                    </td>
                    <td style="display: flex">
                        <p>tags: </p>
                        @foreach (var item in project.tags)
                        {
                            <a href="javascript:void(0)">@item.tag</a>
                            <span style="margin-right: 2px">,</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There is no project yet</p>
}

<h1>Skill</h1>
<ul>
    @foreach (var item in Model.SkillList)
    {
        <li>@item.Title : @item.score.ToString()</li>
    }
</ul>